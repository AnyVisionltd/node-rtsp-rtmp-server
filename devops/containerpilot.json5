{
  consul: '{{.CONSUL_AGENT | default "consul-agent.tls.ai"}}:{{.CONSUL_PORT | default 8500}}',
  "logging": {
    "level": "{{.log_level_containerpilot | default "INFO"}}",
    "format": "default",
    "output": "stdout"
  },
  jobs: [
      {
        name: 'node-rtsp-rtmp-server',
        exec: "coffee /app/server.coffee",
        port: {{.PORT | default 80}},
        restarts: "unlimited",
        health: {
          exec: '/usr/bin/curl -o /dev/null --fail -s http://localhost:{{.PORT | default 80}}',
          interval: 5,
          ttl: 20
      },
      when: {
        source: 'watch.consul-agent',
        once: 'healthy'
      },
    },
  ],
  watches: [
    {
      name: "consul-agent",
      interval: 3
    }
  ],
}
